    <ContentPage Title="Overview">
        <ActivityIndicator  x:Name="OverviewLoading" IsRunning="False"
                            IsVisible="False"
                            HeightRequest="40"
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="CenterAndExpand">
            <ActivityIndicator.WidthRequest>
                <OnPlatform x:TypeArguments="x:Double" iOS="100" Android="100" WinPhone="400" />
            </ActivityIndicator.WidthRequest>
            <ActivityIndicator.Color>
                <OnPlatform x:TypeArguments="Color"
                        iOS="#4285F4" WinPhone="#4285F4" Android="#4285F4" />
            </ActivityIndicator.Color>
        </ActivityIndicator>
        
        <StackLayout Margin="5">
            <Frame OutlineColor="Black" Padding="10">
                <StackLayout BackgroundColor="#FDFDFD">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25*"></ColumnDefinition>
                            <ColumnDefinition Width="25*"></ColumnDefinition>
                            <ColumnDefinition Width="25*"></ColumnDefinition>
                            <ColumnDefinition Width="25*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding ActiveMatch.matchSummaryText}" FontSize="16" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" HorizontalTextAlignment="Start" HorizontalOptions="CenterAndExpand"></Label>
                        <Label Text="{Binding ActiveMatch.homeTeam.name}" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1" HorizontalTextAlignment="Start" HorizontalOptions="Start" Grid.RowSpan="1" VerticalOptions="Center"></Label>
                        <Label Text="{Binding ActiveMatch.scores.homeScore}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" HorizontalTextAlignment="Start"></Label>
                        <Label Text="{Binding ActiveMatch.scores.homeOvers}" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2" HorizontalTextAlignment="End"></Label>
                        <Label Text="{Binding ActiveMatch.awayTeam.name}" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="3" HorizontalTextAlignment="Start" HorizontalOptions="Start" Grid.RowSpan="1" VerticalOptions="Center"></Label>
